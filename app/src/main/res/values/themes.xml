<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base application theme using AppCompat for XML compatibility -->
    <style name="Theme.Podify" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/apple_blue</item>
        <item name="colorPrimaryDark">@color/dark_background</item>
        <item name="colorAccent">@color/apple_blue</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.Podify.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Podify</item>
    </style>
    
    <!-- Overlay theme -->
    <style name="Theme.Podify.Overlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
</resources>
